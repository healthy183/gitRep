		<property name="allowCoreThreadTimeOut" value="true" />
	</bean> -->
		
		
		<step id="salve">
				<tasklet>
					<chunk reader="pagingItemReader" writer="flatFileItemWriter" 
						processor="userProcessor" 
								commit-interval="1">
					</chunk>
				</tasklet>
		</step>
		
			
	
</beans:beans>	